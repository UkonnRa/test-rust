{
  "name": "test-rust",
  "version": "0.1.0",
  "license": "MIT",
  "packageManager": "yarn@3.5.1",
  "engines": {
    "yarn": ">=3",
    "node": ">=20"
  },
  "workspaces": [
    "packages/frontend-core",
    "packages/app-desktop"
  ],
  "scripts": {
    "prepare": "husky install",
    "build:rs": "cargo build --workspace --release",
    "build:js": "yarn workspaces foreach -pitv --exclude test-rust run build",
    "build": "yarn build:js && yarn build:rs",
    "lint:rs": "cargo fmt --check && cargo clippy",
    "lint:stylelint": "stylelint '**/*.{vue,scss,css}' --ignore-path .eslintignore",
    "lint:base:prettier": "prettier '**/*.{vue,ts,js,json}' --ignore-path .eslintignore",
    "lint:prettier": "yarn lint:base:prettier --check",
    "lint:eslint": "eslint '**/*.{vue,ts,js}'",
    "lint:tsc": "yarn workspaces foreach -pitv --exclude test-rust run lint:tsc",
    "lint:fix:prettier": "yarn lint:base:prettier --write",
    "lint:fix:eslint": "yarn lint:eslint --fix",
    "lint:fix:stylelint": "yarn lint:stylelint --fix",
    "lint:fix:rs": "cargo sort -w && cargo fmt && cargo clippy --fix --allow-dirty --allow-staged",
    "lint:fix": "yarn lint:fix:eslint && yarn lint:fix:stylelint && yarn lint:fix:rs && yarn lint:fix:prettier",
    "lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier && yarn lint:tsc && yarn lint:rs",
    "upgrade": "yarn upgrade-interactive && cargo update && cargo upgrade --incompatible --pinned",
    "test": "cargo test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@intlify/unplugin-vue-i18n": "^0.10.0",
    "@intlify/vite-plugin-vue-i18n": "^7.0.0",
    "@mdi/js": "^7.2.96",
    "@quasar/vite-plugin": "^1.3.3",
    "@types/eslint": "^8.37.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.2.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-c8": "^0.31.1",
    "@vue/compiler-dom": "^3.3.2",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-vue": "^9.13.0",
    "husky": "^8.0.3",
    "jsdom": "^22.0.0",
    "markdownlint-cli": "^0.34.0",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "stylelint": "^15.6.2",
    "stylelint-config-recommended-scss": "^11.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.7",
    "vitest": "^0.31.1",
    "vue": "^3.3.2",
    "vue-eslint-parser": "^9.3.0",
    "vue-tsc": "^1.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
